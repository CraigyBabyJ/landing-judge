<Window x:Class="LandingJudge.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="420" Width="400"
        Background="#101318" Foreground="#E6E8EB"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CFD3D8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
         <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#ABADB3"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#ABADB3"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#ABADB3"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        <Style TargetType="Button">
             <Setter Property="Background" Value="#1B2130"/>
            <Setter Property="Foreground" Value="#E6E8EB"/>
             <Setter Property="BorderBrush" Value="#2F3A4F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                         <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#253047"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E6E8EB"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="TTS Configuration" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="White"/>
            
            <!-- Port -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Server Port" VerticalAlignment="Center"/>
                <TextBox x:Name="PortBox" Grid.Column="1" Height="24"/>
            </Grid>

            <!-- TTS Provider -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="TTS Provider" VerticalAlignment="Center"/>
                <ComboBox x:Name="ProviderCombo" Grid.Column="1" Height="24" SelectionChanged="ProviderCombo_SelectionChanged">
                    <ComboBoxItem Content="AWS Polly (Online)" Tag="AWS"/>
                    <ComboBoxItem Content="Microsoft Edge (UNSTABLE - DO NOT USE)" Tag="Edge"/>
                    <ComboBoxItem Content="Microsoft System Speech (Offline)" Tag="System"/>
                </ComboBox>
            </Grid>

            <StackPanel x:Name="AwsSettingsPanel">
                <!-- Region -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="AWS Region" VerticalAlignment="Center"/>
                    <ComboBox x:Name="RegionCombo" Grid.Column="1" Height="24">
                        <ComboBoxItem Content="us-east-1"/>
                        <ComboBoxItem Content="us-east-2"/>
                        <ComboBoxItem Content="us-west-1"/>
                        <ComboBoxItem Content="us-west-2"/>
                        <ComboBoxItem Content="eu-west-1"/>
                        <ComboBoxItem Content="eu-central-1"/>
                        <ComboBoxItem Content="ap-south-1"/>
                        <ComboBoxItem Content="ap-southeast-1"/>
                        <ComboBoxItem Content="ap-southeast-2"/>
                    </ComboBox>
                </Grid>

                <!-- AWS Key -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="AWS Key" VerticalAlignment="Center"/>
                    <TextBox x:Name="KeyBox" Grid.Column="1" Height="24"/>
                </Grid>

                <!-- Secret -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="AWS Secret" VerticalAlignment="Center"/>
                    <PasswordBox x:Name="SecretBox" Grid.Column="1" Height="24"/>
                </Grid>
            </StackPanel>

             <!-- Voice -->
             <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Voice" VerticalAlignment="Center"/>
                <ComboBox x:Name="VoiceCombo" Grid.Column="1" Height="24" IsEditable="False">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding FlagPath}" Width="20" Height="14" Margin="0,0,5,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Grid.Column="2" Content="â†»" Margin="5,0,0,0" Click="LoadVoices_Click" ToolTip="Refresh Voices"/>
            </Grid>

            
             <CheckBox x:Name="TtsCheck" Content="Enable TTS System" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save &amp; Close" Width="100" Height="30" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
