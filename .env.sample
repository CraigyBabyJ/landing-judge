# Landing Judge â€” sample .env
# Copy this file to `.env` and customize values.

# Server
PORT=5005

# Overlay/UI
OVERLAY_HUE_DEG=0
SHOW_EVENTS_LOG=true

# TTS (Amazon Polly)
ENABLE_TTS=true
AWS_REGION=us-east-1
POLLY_VOICE_ID=Joanna
POLLY_OUTPUT_FORMAT=mp3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Overlay audio effects
EFFECT_PRESET=none
ADD_STATIC_NOISE=false
STATIC_NOISE_LEVEL=0.02
RADIO_NOISE_LEVEL=0.03
WIND_NOISE_LEVEL=0.03

# Timing (overlay ignores these; it uses a fixed 1500ms client-side duration)
BANNER_DURATION_MS=8000
BANNER_MIN_LINGER_MS=2000
HIDE_ON_AUDIO_END=true
